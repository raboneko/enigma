{
    "app-id" : "co.tauos.Enigma.Devel",
    "runtime" : "co.tauos.Sdk",
    "runtime-version" : "stable",
    "sdk" : "co.tauos.Sdk",
    "command" : "co.tauos.Enigma",
    "finish-args" : [
        "--device=dri",
        "--filesystem=xdg-run/gvfsd",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--share=ipc"
    ],
    "desktop-file-name-suffix" : " (Nightly)",
    "cleanup" : [
        "/cache",
        "/man",
        "/share/aclocal",
        "/lib/systemd",
        "/include",
        "/lib/pkgconfig",
        "/lib/libvala*",
        "/share/gtk-doc",
        "/share/man",
        "/share/vala",
        "*.a",
        "*.la"
    ],
    "modules" : [
        {
            "name" : "gtksourceview",
            "buildsystem" : "meson",
            "config-opts" : [
                "-Dinstall_tests=false",
                "-Dintrospection=enabled",
                "-Dvapi=true",
                "-Dgtk_doc=false",
                "-Dsysprof=false"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/gtksourceview.git",
                    "tag" : "5.4.2"
                }
            ]
        },
        {
            "name" : "enigma",
            "builddir" : true,
            "buildsystem" : "meson",
            "config-opts" : [
                "-Ddevelopment=true"
            ],
            "sources" : [
                {
                    "type" : "dir",
                    "path" : "."
                },
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/jwestman/blueprint-compiler.git",
                    "branch" : "main",
                    "dest" : "./subprojects/blueprint-compiler"
                }
            ]
        }
    ],
    "build-options" : {
        "env" : {        }
    }
}
